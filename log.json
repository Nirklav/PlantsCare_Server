{
  "refresh_rate": "30 seconds",
  "appenders": {
    "all": {
      "kind": "file",
      "path": "log/all.log",
      "encoder": {
        "pattern": "{d(%Y-%m-%d %H:%M:%S)} {M} {l} - {m}{n}"
      }
    },
    "errors": {
      "kind": "file",
      "path": "log/errors.log",
      "filters":[{
          "kind":"threshold",
          "level":"error"
        }
      ],
      "encoder": {
        "pattern": "{d(%Y-%m-%d %H:%M:%S)} {M} {l} - {m}{n}"
      }
    }
  },
  "root": {
    "level":"info",
    "appenders": [
      "all",
      "errors"
    ]
  }
}
